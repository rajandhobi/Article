<turbo-stream action="replace" target="<%= dom_id(@comment) %>">
  <template>
    <div class="card mb-3" id="<%= dom_id(@comment) %>">
      <div class="card-body">
        <h5 class="card-title"><%= @comment.commenter %></h5>
        <p class="card-text"><%= @comment.body %></p>

        <% if policy(@comment).update? %>
          <%= link_to "Edit", edit_article_comment_path(@article, @comment), class: "btn btn-warning btn-sm" %>
        <% end %>

        <% if policy(@comment).destroy? %>
          <%= button_to "Delete", article_comment_path(@article, @comment), method: :delete, 
                class: "btn btn-danger btn-sm", data: { confirm: "Are you sure?" } %>
        <% end %>
      </div>
    </div>
  </template>
</turbo-stream>
