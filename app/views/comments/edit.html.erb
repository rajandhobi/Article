<div class="container mt-4">
  <h2 class="text-primary">Edit Comment</h2>
  <%= form_with(model: [@article, @comment], local: false) do |form| %>
    <div class="mb-3">
      <%= form.label :commenter, class: "form-label fw-bold" %>
      <%= form.text_field :commenter, class: "form-control w-50 p-2", readonly: true %>
    </div>

    <div class="mb-3">
      <%= form.label :body, class: "form-label fw-bold" %>
      <%= form.text_area :body, class: "form-control w-75 p-2", rows: 4 %>
    </div>

    <%= form.submit "Update Comment", class: "btn btn-success" %>
    <%= link_to "Cancel", article_path(@article), class: "btn btn-secondary ms-2" %>
  <% end %>
</div>
