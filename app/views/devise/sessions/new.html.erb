<h2 class="text-center mb-4">Log In</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "p-4 border rounded-3 shadow-sm bg-light" }) do |f| %>
  <div class="mb-3">
    <%= f.label :email, class: "form-label " %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control w-50" %>
  </div>

  <div class="mb-3">
    <%= f.label :password, class: "form-label" %>
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control w-50" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="mb-3 form-check">
      <%= f.check_box :remember_me, class: "form-check-input" %>
      <%= f.label :remember_me, class: "form-check-label" %>
    </div>
  <% end %>

  <div class="text-center mt-3">
    <%= f.submit "Log In", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "devise/shared/links", class: "text-center mt-3" %>
